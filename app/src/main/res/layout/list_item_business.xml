<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_business"
        android:layout_width="@dimen/dp84"
        android:layout_height="@dimen/dp84"
        android:layout_marginBottom="@dimen/dp30"
        android:layout_marginEnd="@dimen/dp20"
        android:layout_marginStart="@dimen/dp13"
        android:layout_marginTop="@dimen/dp30"
        tools:src="@mipmap/icon_business" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_text"
            android:textColor="@color/black"
            android:textSize="@dimen/sp20"
            tools:text="巴菲套餐（南坪店）" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5">


            <TextView
                android:id="@+id/tv_descrtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_text"
                android:textColor="#999999"
                android:textSize="@dimen/sp18"
                tools:text="好吃得很，巴适得板，意想不到的味道" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5">

            <ImageView
                android:layout_width="@dimen/dp25"
                android:layout_height="@dimen/dp25"
                tools:src="@mipmap/icon_reduce" />

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp5"
                android:text="@string/default_text"
                android:textColor="#999999"
                android:textSize="@dimen/sp18"
                tools:text="满100减10" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp13"
        android:gravity="center_vertical|right"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:textColor="#999999"
            android:textSize="@dimen/sp18"
            tools:text="1009m" />


    </LinearLayout>


</LinearLayout>