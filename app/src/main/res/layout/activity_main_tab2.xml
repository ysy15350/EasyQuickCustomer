<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/base_form">

    <include layout="@layout/form_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp55"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_tab1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠力度"
                android:textColor="@color/text_title"
                android:textSize="@dimen/sp20" />

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp30"
                android:layout_marginStart="@dimen/dp10"
                android:src="@mipmap/icon_down" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_tab2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离最近"
                android:textColor="@color/text_title"
                android:textSize="@dimen/sp20" />

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp30"
                android:layout_marginStart="@dimen/dp10"
                android:src="@mipmap/icon_down" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分类"
                android:textColor="@color/text_title"
                android:textSize="@dimen/sp20" />

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp30"
                android:layout_marginStart="@dimen/dp10"
                android:src="@mipmap/icon_down" />

        </LinearLayout>

    </LinearLayout>

    <View style="@style/view_line" />

    <custom_view.x_view.XListView
        android:id="@+id/xListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/devider_color"
        android:dividerHeight="@dimen/dp16"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp100"
            android:src="@mipmap/icon_nodata" />

        <TextView
            android:id="@+id/tv_nodata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:gravity="center"
            android:text="暂无数据，点击刷新"
            android:textColor="@color/text_content"
            android:textSize="@dimen/sp20" />
    </LinearLayout>


</LinearLayout>